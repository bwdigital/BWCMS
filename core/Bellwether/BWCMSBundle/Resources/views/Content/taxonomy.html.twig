{% extends "BWCMSBundle:Common:default.html.twig" %}

{% block title %} {{ title }} {% endblock %}
{% block pageTitle %}
    <h1>{{ title }}</h1>
{% endblock %}

{% block header %}
    <link rel="stylesheet" href="{{ asset('bundles/bwcms/js/jstree/themes/default/style.min.css') }}"/>
{% endblock %}

{% block body %}
    {% if not isHierarchy %}
        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped table-hover table-bordered records_list">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Slug</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td>{{ entity.title }}</td>
                            <td>{{ entity.slug }}</td>
                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-default btn-sm"
                                       href="{{ path('content_edit', {'contentId': entity.id}) }}">
                                        <i class="fa fa-edit"></i> Edit
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <ul>
                    <li>
                        <a href="{{ path('content_create', { 'type' : type , 'schema' : schema , 'parent': 'Root' } ) }}">
                            Add New
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    {% else %}
        <script language="JavaScript">
            $(document).ready(function () {
                var h = Math.max(document.documentElement.clientHeight, window.innerHeight || 0);
                if ((h - 200) > 400) {
                    $('div.contentPageLeft').height(h - 200);
                }
            });
            $(window).resize(function () {
                var h = Math.max(document.documentElement.clientHeight, window.innerHeight || 0);
                if ((h - 200) > 400) {
                    $('div.contentPageLeft').height(h - 200);
                }
            })
        </script>
        <div class="row">
            <div class="col-md-12">
                <div id="jstree_div" class="contentPageLeft"></div>
            </div>
        </div>
        <script language="JavaScript">
            var ajaxRequestActive = false;
            $(document).ready(function () {
                $('#jstree_div').jstree({
                    'core': {
                        'data': {{ jsNodes|raw }},
                        'multiple': false,
                        'check_callback': function (operation, node, node_parent, node_position, more) {
                            if (ajaxRequestActive) {
                                return false;
                            }
                            if (operation === "move_node") {
                                if (node_parent.id == '#' || node.parent == node_parent.id) {
                                    return false;
                                }
                                if (typeof more.core === 'undefined') {
                                    return true;
                                }
                                var request = $.ajax({
                                    method: "POST",
                                    url: "{{ url('content_folder_move') }}",
                                    data: {contentId: node.id, targetId: node_parent.id},
                                    beforeSend: function () {
                                        ajaxRequestActive = true;
                                    },
                                    error: function (xhr, ajaxOptions, errorThrown) {
                                        ajaxRequestActive = false;
                                        alert('Error: ' + xhr.responseText);
                                    },
                                    success: function (data) {
                                        if ($("#selectedContentFolderId").val() == node_parent.id) {
                                            contentTable.ajax.reload(null, false);
                                        }
                                    },
                                    complete: function () {
                                        ajaxRequestActive = false;
                                    }
                                });
                            }
                            return true;  //allow all other operations
                        }

                    },
                    'contextmenu': {
                        'items': function (node, treeObj) {
                            return {
                                "Create": {
                                    "separator_before": false,
                                    "separator_after": false,
                                    "label": "Add",
                                    "icon": "glyphicon glyphicon-plus",
                                    "action": function () {
                                         window.location = '{{ url('content_create') }}' + '?parent=' + node.id + '&type={{ type }}&schema={{ schema }}';
                                        return false;
                                    },
                                    "_disabled": function () {
                                        return false;
                                    }
                                },
                                "Edit": {
                                    "separator_before": false,
                                    "separator_after": false,
                                    "label": "Edit",
                                    "icon": "glyphicon glyphicon-pencil",
                                    "action": function () {
                                        window.location = '{{ url('content_edit') }}' + '?contentId=' + node.id;
                                        return false;
                                    },
                                    "_disabled": function () {
                                        if (node.id == 'Root') {
                                            return true;
                                        }
                                        return false;
                                    }
                                },
                                "Delete": {
                                    "separator_before": false,
                                    "separator_after": false,
                                    "label": "Delete",
                                    "icon": "glyphicon glyphicon-remove",
                                    "action": function () {
                                        var request = $.ajax({
                                            method: "POST",
                                            url: "{{ url('content_delete') }}",
                                            data: {
                                                contentIds: node.id,
                                                targetId: 'Root',
                                                type: '{{ type }}'
                                            },
                                            beforeSend: function () {
                                                ajaxRequestActive = true;
                                            },
                                            error: function (xhr, ajaxOptions, errorThrown) {
                                                ajaxRequestActive = false;
                                                $.notify({message: xhr.responseText}, {type: 'danger', delay: 5.0});
                                            },
                                            success: function (data) {
                                                $('#jstree_div').jstree(true).settings.core.data = data.nodes;
                                                $('#jstree_div').jstree(true).refresh();
                                            },
                                            complete: function (data) {
                                                ajaxRequestActive = false;
                                            }
                                        });
                                    },
                                    "_disabled": function () {
                                        if (node.id == 'Root') {
                                            return true;
                                        }
                                        return false;
                                    }
                                }


                            }
                        }
                    },
                    'plugins': ['contextmenu', 'dnd']
                });
            });
        </script>
    {% endif %}
{% endblock %}

{% block footer %}
    <script src="{{ asset('bundles/bwcms/js/jstree/jstree.min.js') }}"></script>
{% endblock %}
