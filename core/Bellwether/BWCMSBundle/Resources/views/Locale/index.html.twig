{% extends "BWCMSBundle:Common:default.html.twig" %}


{% block title %} {{ title }} {% endblock %}
{% block pageTitle %}
    <h1>{{ title }}</h1>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <form class="form-inline" action="{{ url('locale_home') }}" method="get">
                        <div class="form-group">
                            <input name="search" value="{{ app.request.get('search') }}" type="text" class="form-control" style="width: 300px;">
                        </div>
                        <button type="submit" class="btn btn-default">Search</button>
                    </form>
                </div>
            </div>


            <table class="table table-striped table-bordered    table-hover ">
                <thead>
                <tr>
                    <th width="45%">String</th>
                    <th width="45%">Value</th>
                    <th width="10%">Action</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in pager.items %}
                    <tr>
                        <td>{{ entity.text }}</td>
                        <td id="{{ entity.id }}" class="iedit">{{ entity.value }}</td>
                        <td align="center">
                            <button type="button" data-id="{{ entity.id }}" class="btn btn-primary edit"><i
                                        class="glyphicon glyphicon-pencil"></i></button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            {% include 'BWCMSBundle:Common:pagination.html.twig' with {'pager': pager } %}

        </div>
    </div>
{% endblock %}

{% block footer %}
    <script language="JavaScript">
        var isEditing = false;
        var editingId = false;
        var orginalValue = false;

        function closeEditor(newValue) {
            if (newValue != orginalValue) {
                orginalValue = newValue;
                var request = $.ajax({
                    method: "POST",
                    global: false,
                    url: "{{ url('locale_save') }}",
                    data: {localeId: editingId, newValue: newValue},
                    error: function (xhr, ajaxOptions, errorThrown) {
                        //
                    },
                    success: function (data) {
                        //
                    },
                    complete: function () {
                        //
                    }
                });
            }
            $('#' + editingId).html(orginalValue);
            isEditing = false;
            editingId = false;
            orginalValue = false;
        }

        $(document).ready(function () {
            $('button.edit').click(function () {
                var tdID = $(this).data('id');
                $('#' + tdID).trigger('click');
            });

            $('td.iedit').click(function (e) {
                if (isEditing) {
                    return;
                }
                isEditing = true;
                editingId = $(this).attr('id');
                orginalValue = $(this).html();
                $(this).html('<textarea id="inlineEditor" rows="3" style="width: 100%;">' + orginalValue + '</textarea>');
                $('#inlineEditor').keydown(function (e) {
                    var newValue = $('#inlineEditor').val();
                    if (e.keyCode == 27) {
                        closeEditor(newValue);
                        return false;
                    }
                    if (e.keyCode == 9 || e.keyCode == 13) {
                        var nextItem = $(this).parent().parent().next().find('td.iedit').first();
                        closeEditor(newValue);
                        nextItem.trigger('click');
                        return false;
                    }
                });
                $('#inlineEditor').blur(function (e) {
                    var newValue = $('#inlineEditor').val();
                    closeEditor(newValue);
                });
                $('#inlineEditor').select();
            });
        });
    </script>
{% endblock %}
